.container
  .row
    .alert.alert-info
      %h1= @study.title
  =form_tag("/home/project", :target => "_blank")
  .row
    .col-lg-6
      - if @study.viewc != "" and !@study.viewc.nil?
        .row{:style => "height:550px"}
          %h1 뷰view 입력창
          %textarea{:readonly => "", :style => "position:absolute;color:#aaa;width:100%;height:500px"} #{@study.viewc.html_safe}
          %textarea{:style => "position:absolute;background-color:transparent;width:100%;height:500px", :name => "view"}
      - if @study.controllerc != "" and !@study.controllerc.nil?
        .row{:style => "height:550px"}
          %h1 컨트롤러controller 입력창
          %textarea{:readonly => "", :style => "position:absolute;color:#aaa;width:100%;height:500px"} #{@study.controllerc.html_safe}
          %textarea{:style => "position:absolute;background-color:transparent;width:100%;height:500px", :name => "controller"}
      - if @study.modelc != "" and !@study.modelc.nil?
        .row{:style => "height:550px"}
          %h1 데이터베이스 입력창
          %textarea{:readonly => "", :style => "position:absolute;color:#aaa;width:100%;height:500px"} #{@study.modelc.html_safe}
          %textarea{:style => "position:absolute;background-color:transparent;width:100%;height:500px", :name => "model"}
    .col-lg-6
      %h1 설명
      %pre #{@study.description}
      =submit_tag "실행 해보기"
      %hr
      %a{:class => "btn btn-info btn-lg", :role => "button", :href => "/home/viewstudy/#{@study.id + 1}"} 다음 단계 학습하기
